<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:id="@+id/rc_layout" android:layout_width="wrap_content" android:layout_height="match_parent">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/rc_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitStart"/>
        <TextView android:textSize="14sp" android:textColor="#4385bf" android:layout_gravity="center_vertical" android:id="@+id/rc_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
        <TextView android:textSize="14sp" android:textColor="#a2a2a2" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/rc_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
    </FrameLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/rc_voice_unread" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/rc_voice_unread"/>
</LinearLayout>

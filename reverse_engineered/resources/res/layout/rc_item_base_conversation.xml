<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center_vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginLeft="5dp" android:layout_marginRight="14dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/rc_layout" android:layout_width="match_parent" android:layout_height="22dp" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="14dp">
        <TextView android:textSize="@dimen/rc_conversation_item_name_size" android:textColor="@color/rc_text_color_primary" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/rc_conversation_title" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="3"/>
        <TextView android:textSize="@dimen/rc_conversation_item_data_size" android:textColor="@color/rc_text_color_secondary" android:gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/rc_conversation_time" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="14dp" android:layout_marginBottom="10dp" android:layout_below="@+id/rc_layout">
        <TextView android:textSize="@dimen/rc_conversation_item_data_size" android:textColor="@color/rc_text_color_secondary" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/rc_conversation_content" android:background="@android:color/transparent" android:paddingTop="1dp" android:layout_width="231dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="horizontal" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/rc_conversation_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/rc_read_receipt"/>
            <ImageView android:id="@+id/rc_conversation_msg_block" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/rc_ic_message_block"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

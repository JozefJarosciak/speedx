<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/whole_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <io.rong.imkit.widget.HackyViewPager android:id="@+id/viewpager" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/toolbar_top" android:background="@color/rc_picprev_toolbar_transparent" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true">
        <ImageButton android:id="@+id/back" android:background="@drawable/rc_sel_picsel_toolbar_back" android:layout_width="48dp" android:layout_height="match_parent" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/index_total" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginBottom="1dp" android:layout_toRightOf="@+id/back"/>
        <Button android:textSize="14sp" android:textColor="@color/rc_picsel_toolbar_send_text_normal" android:id="@+id/send" android:background="@drawable/rc_sel_picsel_toolbar_send" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="32dp" android:layout_marginRight="8dp" android:minWidth="0dp" android:text="@string/rc_picsel_toolbar_send" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/toolbar_bottom" android:background="@color/rc_picprev_toolbar_transparent" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/origin_check" android:paddingLeft="18dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:id="@+id/text" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/select_check" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:id="@+id/text" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

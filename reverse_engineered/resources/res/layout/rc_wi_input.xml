<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@color/rc_input_gap_color" android:layout_width="match_parent" android:layout_height="0.05dp"/>
    <RelativeLayout android:id="@android:id/input" android:background="@android:color/white" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/rc_switcher" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="horizontal" android:id="@+id/rc_menu_switch" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/rc_switcher1" android:background="@android:color/transparent" android:layout_width="35dp" android:layout_height="wrap_content" android:src="@drawable/rc_ic_text" android:layout_alignParentLeft="true"/>
                <View android:background="@android:color/darker_gray" android:layout_width="0.05dp" android:layout_height="50dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center_vertical" android:id="@android:id/icon1" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp"/>
        </LinearLayout>
        <FrameLayout android:id="@android:id/toggle" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ImageView android:layout_gravity="center" android:id="@android:id/icon2" android:background="@android:color/transparent" android:paddingLeft="6dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout android:id="@android:id/custom" android:background="@android:color/white" android:paddingLeft="12dp" android:paddingRight="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="0.05dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/rc_input_menu" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true">
        <View android:layout_gravity="top" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="0.05dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:layout_gravity="center" android:id="@+id/rc_switcher2" android:background="@drawable/rc_ic_menu_keyboard" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
            <View android:background="@android:color/darker_gray" android:layout_width="0.05dp" android:layout_height="match_parent" android:layout_marginLeft="5dp"/>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/rc_input_custom_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@android:id/widget_frame" android:background="@color/rc_plugins_bg" android:padding="0dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/rc_plugins" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/rc_ext" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </FrameLayout>
</merge>

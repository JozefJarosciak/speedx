<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rc_frame" android:background="@drawable/rc_bg_editinput" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:id="@+id/rc_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@android:id/icon" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/rc_ic_smiley"/>
            <Button android:textSize="14dp" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@android:id/button1" android:background="@drawable/rc_btn_send" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/rc_input_send" android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0px" android:layout_height="0px"/>
        <EditText android:textSize="16sp" android:textColor="#353535" android:layout_gravity="center_vertical" android:id="@android:id/edit" android:background="@android:color/transparent" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="4" android:layout_toLeftOf="@+id/rc_layout" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>

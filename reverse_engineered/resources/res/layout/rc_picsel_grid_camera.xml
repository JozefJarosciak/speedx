<?xml version="1.0" encoding="utf-8"?>
<io.rong.imkit.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="127dp">
    <RelativeLayout android:background="#353535" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/pic_camera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/rc_grid_camera"/>
            <TextView android:textSize="12sp" android:textColor="@android:color/white" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/rc_picsel_take_picture"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageButton android:id="@+id/camera_mask" android:background="@drawable/rc_selector_grid_camera_mask" android:layout_width="match_parent" android:layout_height="match_parent"/>
</io.rong.imkit.widget.SquareLayout>

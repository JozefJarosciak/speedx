        <com.digits.sdk.android.LinkTextView android:layout_gravity="center" android:id="@id/dgts__try_another_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dgts__try_another_phone" />
    </LinearLayout>
</ScrollView>
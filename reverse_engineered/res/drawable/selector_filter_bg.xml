<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#ff1a1a1a" />
            <stroke android:width="2.0dip" android:color="#fffa4b19" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff1a1a1a" />
            <stroke android:width="1.0dip" android:color="#fffa4b19" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff1a1a1a" />
            <stroke android:width="1.0dip" android:color="#fffa4b19" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ff1a1a1a" />
            <stroke android:width="1.0dip" android:color="#ff444444" />
        </shape>
    </item>
</selector>